<Window x:Class="MedicineSearch.TypeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicineSearch"
        mc:Ignorable="d"
        Title="TypeForm" Height="350" Width="450">
    <Grid  Background="#6aa5cc" Width="auto">
        <Rectangle Margin="10" Width="auto" Fill="White" />
        <Label Width="auto" HorizontalAlignment="Center" FontWeight="Bold" FontSize="40" Content="Insert Type" Margin="68,20,68,205" Foreground="Black"/>
        <Label Width="98" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" Content="Enter Type" Margin="121,104,223,165" Foreground="Black"/>
        <TextBox x:Name="txtType" HorizontalAlignment="Center" Height="30" Margin="111,130,111,139" TextWrapping="Wrap" Text="" Width="200"/>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Width="74" Click="TypeBtn" />
    </Grid>
</Window>
