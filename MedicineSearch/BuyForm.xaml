<Window x:Class="MedicineSearch.BuyForm"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicineSearch"
        mc:Ignorable="d"
        Title="Enter Quantity" Height="350" Width="450">
    <Grid  Background="#6aa5cc" Width="auto">
        <Rectangle Margin="10" Width="auto" Fill="White" />
        <Label Width="325" Height="auto" HorizontalAlignment="Center" FontWeight="Bold" FontSize="40" Content="Enter Quantity" Margin="68,20,49,205" Foreground="Black"/>
        <Label Width="110" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" Content="Enter Quantity" Margin="121,100,211,179" Foreground="Black"/>
        <TextBox x:Name="txtQuantity" HorizontalAlignment="Center" Height="30" Margin="0,130,0,139" TextWrapping="Wrap" Text="" Width="200"/>
        <Button x:Name="button" Content="Buy" HorizontalAlignment="Center" Margin="0,202,0,0" VerticalAlignment="Top" Width="70" Click="ConfirmBtn" />
    </Grid>
</Window>
